@model gestioncommande.Models.Commande

@{
    ViewData["Title"] = "Créer une Commande";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ClientId">Client</label>
        <select class="form-control" id="ClientId" name="ClientId">
            @foreach (var client in ViewBag.Clients as List<GestionDesCommandes.Models.Client>)
            {
                <option value="@client.Id">@client.Nom</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Montant">Montant</label>
        <input type="text" class="form-control" id="Montant" name="Montant" required />
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
</form>

