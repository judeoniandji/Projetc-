@model gestioncommande.Models.Commande

@{
    ViewData["Title"] = "Modifier une Commande";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="ClientId">Client</label>
        <select class="form-control" id="ClientId" name="ClientId">
            @foreach (var client in ViewBag.Clients as List<GestionDesCommandes.Models.Client>)
            {
                <option value="@client.Id" @(client.Id == Model.ClientId ? "selected" : "")>@client.Nom</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Montant">Montant</label>
        <input type="text" class="form-control" id="Montant" name="Montant" value="@Model.Montant" required />
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
</form>
