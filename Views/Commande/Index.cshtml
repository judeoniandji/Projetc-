@model IEnumerable<gestioncommande.Models.Commande>

@{
    ViewData["Title"] = "Liste des Commandes";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Montant</th>
            <th>Client</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var commande in Model)
    {
        <tr>
            <td>@commande.Date</td>
            <td>@commande.Montant</td>
            <td>@commande.Client.Nom</td>
            <td>
                <a href="@Url.Action("Details", "Commande", new { id = commande.Id })" class="btn btn-info">DÃ©tails</a>
                <a href="@Url.Action("Edit", "Commande", new { id = commande.Id })" class="btn btn-warning">Modifier</a>
                <a href="@Url.Action("Delete", "Commande", new { id = commande.Id })" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Commande")" class="btn btn-primary">Ajouter une commande</a>
