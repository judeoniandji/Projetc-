@model gestioncommande.Models.Produit

<h2>Ajouter un Produit</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Libelle" class="control-label"></label>
        <input asp-for="Libelle" class="form-control" />
        <span asp-validation-for="Libelle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantiteStock" class="control-label"></label>
        <input asp-for="QuantiteStock" class="form-control" />
        <span asp-validation-for="QuantiteStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrixUnitaire" class="control-label"></label>
        <input asp-for="PrixUnitaire" class="form-control" />
        <span asp-validation-for="PrixUnitaire" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantiteSeuil" class="control-label"></label>
        <input asp-for="QuantiteSeuil" class="form-control" />
        <span asp-validation-for="QuantiteSeuil" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>
